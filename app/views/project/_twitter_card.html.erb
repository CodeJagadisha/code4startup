<!-- Twitter Card data -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@Code4Startup-Japan">
<meta name="twitter:creator" content="@Code4Startup-Japan">
<meta name="twitter:title" content="<%= @project.name %>">
<meta name="twitter:description" content="<%= @project.content %>">
<meta name="twitter:image:src" content="<%= image_url @project.image %>">
<!-- Open Graph data -->
<meta property="og:site_name" content="Code4Startup-Japan">
<meta property="og:type" content="website">
<meta property="og:title" content="<%= @project.name %>">
<meta property="og:description" content="<%= @project.content %>">
<meta property="og:image" content="<%= @project.image %>">
